{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with Clang",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/your_executable",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "clang++ build",
            "miDebuggerPath": "/path/to/clang"
        }
    ]
}